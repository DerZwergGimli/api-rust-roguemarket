
# Our first FROM statement declares the build environment.
FROM joxit/rust-openssl:latest AS builder

# Add our source code.
COPY . .
# Build our application.
RUN cd worker && cargo build --release

# Now, we need to build our _real_ Docker container, copying in `using-sqlx`.
FROM alpine:latest
RUN apk --no-cache add ca-certificates
COPY --from=builder \
    /home/rust/worker/target/x86_64-unknown-linux-musl/release/worker \
    /usr/local/bin/
CMD /usr/local/bin/worker